<div class="container">
<div class="row justify-content-center">
<div class= "col-4">
<%= simple_form_for @pet do |f| %>
  <%= f.input :name %>
  <%= f.input :gender %>
  <%= f.input :species %>
  <%= f.input :age %>
  <%= f.input :description %>
  <%= f.input :price %>
